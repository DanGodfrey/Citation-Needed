<h1>Listing stats</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Number</th>
    <th>Member</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stats.each do |stat| %>
  <tr>
    <td><%= stat.name %></td>
    <td><%= stat.number %></td>
    <td><%= stat.member_id %></td>
    <td><%= link_to 'Show', stat %></td>
    <td><%= link_to 'Edit', edit_stat_path(stat) %></td>
    <td><%= link_to 'Destroy', stat, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

