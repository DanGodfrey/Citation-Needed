<h1>Listing members</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>Twitter</th>
    <th>Github</th>
    <th>Weapon</th>
    <th>Specialty</th>
    <th>Catch phrase</th>
    <th>Profile pic url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%= member.name %></td>
    <td><%= member.bio %></td>
    <td><%= member.twitter %></td>
    <td><%= member.github %></td>
    <td><%= member.weapon %></td>
    <td><%= member.specialty %></td>
    <td><%= member.catch_phrase %></td>
    <td><%= member.profile_pic_url %></td>
    <td><%= link_to 'Show', member %></td>
    <td><%= link_to 'Edit', edit_member_path(member) %></td>
    <td><%= link_to 'Destroy', member, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

